{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es2022",
    "baseUrl": "./modules",
    "moduleResolution": "Node"
  },
  "include": [
    "src/*",
    "modules/corpus_processor/*",
    "modules/kanken_lookup/*",
    "modules/aozora_processor/*",
    "modules/jis_decoder/*",
    "modules/compiler/*",
    "modules/kanji_database_processor/*",
    "modules/tanaka_corpus_processor/*",
    "modules/single_reading_processor/*",
  ],
}